<div id="facet-panel-collapse" class="collapse panel-group">
  <div class="panel panel-default facet_limit blacklight-date_drsim ">
    <div class="collapse-toggle panel-heading" data-toggle="collapse" data-target="#facet-date_drsim" aria-expanded="true">
      <h3 class="panel-title facet-field-heading">
        <a data-turbolinks="false" data-no-turbolink="true" href="#">Date</a>
      </h3>
    </div>
    <div id="facet-date_drsim" class="panel-collapse facet-content collapse in" aria-expanded="true" style="">
      <div class="panel-body">
        <%= form_tag search_action_path, :method => :get do %>
          <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:page, :exact_or_range, :after_date, :before_date)) %>
          <!-- Input and label for choosing filtering by exact date  -->
          <input type="radio" value="exact" id="exact_date_option" name="exact_or_range" <%= params['exact_or_range'] == 'exact' ? 'checked ' : '' %>/>
          <label for="exact_date_option">Exact</label>

          <!-- Input and label for filtering by date range  -->
          <input type="radio" value="range" id="range_date_option" name="exact_or_range" <%= params['exact_or_range'] == 'range' ? 'checked ' : '' %>/>
          <label for="range_date_option">Range</label>

          <!-- Input and label for the after date -->
          <label for="after_date">On</label>
          <input type="date" id="after_date" name="after_date" value="<%= params['after_date'] %>"/>

          <!-- Input and label for the before date -->
          <label for="before_date">To</label>
          <input type="date" id="before_date" name="before_date" value="<%= params['before_date'] %>"/>

          <%= submit_tag "Update" %>
        <% end %>

        <script type="application/javascript">
        $(document).ready(function() {
          // Create the event handler to toggle whether the filter is using an
          // exact date or a date range.
          var exact_or_range_event_handler = function(_event) {
            var exact_or_range = $('input:radio[name="exact_or_range"]:checked').val()
            if(exact_or_range == 'exact') {
              $('#before_date').prop('disabled', true);
              $('#before_date').hide();
              $('label[for="before_date"]').hide();
              $('label[for="after_date"]').text("On")
            } else {
              $('label[for="after_date"]').text("From")
              $('#before_date').prop('disabled', false);
              $('#before_date').show();
              $('label[for="before_date"]').show();
            }
          };

          // Run the event handler an initial time.
          exact_or_range_event_handler();

          // Attach the event handler to the change event of the radio buttons.
          $('input:radio[name="exact_or_range"]').change(exact_or_range_event_handler);
        });
        </script>
      </div>
    </div>
  </div>
</div>
